{
  "name": "nse-options-paper-trading",
  "version": "1.0.0",
  "description": "Near-realistic options paper trading system for NIFTY/BANKNIFTY with Zerodha Kite Connect",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npx tsc",
    "start": "npx tsx src/main.ts",
    "dev": "npx tsx watch src/main.ts",
    "cli": "npx tsx src/cli/index.ts start",
    "webhook": "npx tsx src/api/webhook-server.ts",
    "test": "npx vitest",
    "lint": "npx eslint src --ext .ts",
    "typecheck": "npx tsc --noEmit",
    "docker:build": "docker build -t nse-paper-trading .",
    "docker:run": "docker run -it --rm --env-file .env -v $(pwd)/data:/app/data nse-paper-trading",
    "docker:run:detached": "docker run -d --name nse-trader --env-file .env -v $(pwd)/data:/app/data -p 3000:3000 nse-paper-trading",
    "docker:stop": "docker stop nse-trader && docker rm nse-trader",
    "docker:logs": "docker logs -f nse-trader"
  },
  "keywords": [
    "options",
    "paper-trading",
    "nifty",
    "banknifty",
    "zerodha",
    "kite-connect",
    "nse"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^12.0.0",
    "date-fns": "^3.3.1",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.4.1",
    "eventemitter3": "^5.0.1",
    "express": "^4.18.2",
    "gaussian": "^1.3.0",
    "inquirer": "^9.2.12",
    "kiteconnect": "^5.0.0",
    "lodash-es": "^4.17.21",
    "node-telegram-bot-api": "^0.67.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.7",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.16",
    "@types/node-telegram-bot-api": "^0.64.13",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
